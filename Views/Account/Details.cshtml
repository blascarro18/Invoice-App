@model InvoiceApp.Models.Accounts.Account

@{
    ViewData["Title"] = "Detalle de Cuenta";
}

<div class="container">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2>Detalle de cuenta</h2>

        <div class="btn-toolbar mb-2 mb-md-0"></div>
        <a class="btn btn-danger" asp-controller="Account" asp-action="Index" role="button">
            <span data-feather="arrow-left"></span>
            Regresar
        </a>

    </div>

    <dl class="row">
        <dt class="col-sm-3">Código Cliente</dt>
        <dd class="col-sm-9">@Model.CodCli</dd>

        <dt class="col-sm-3">NIT</dt>
        <dd class="col-sm-9">@Model.NitCli</dd>

        <dt class="col-sm-3">Nombre Cliente</dt>
        <dd class="col-sm-9">@Model.NomCli</dd>

        <dt class="col-sm-3">Ciudad</dt>
        <dd class="col-sm-9">@Model.CodCiu</dd>

        <dt class="col-sm-3">Departamento</dt>
        <dd class="col-sm-9">@Model.CodDep</dd>

        <dt class="col-sm-3">País</dt>
        <dd class="col-sm-9">@Model.CodPai</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Te1Cli</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Fecha Ingreso</dt>
        <dd class="col-sm-9">@Model.FecIng</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.EstCli</dd>

        <dt class="col-sm-3">Página Web</dt>
        <dd class="col-sm-9">@Model.PagWeb</dd>
    </dl>
</div>
